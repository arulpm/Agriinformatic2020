<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/laptopIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:text="Mobile APP Developers"
        android:textSize="30dp"
        android:fontFamily="sans-serif-black"/>

    <ImageView
        android:id="@+id/laptopIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/laptop" />

    <ImageButton
        android:id="@+id/Buttonpanah"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/laptopIV"
        android:layout_marginTop="-4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:scaleType="centerCrop"
        android:src="@drawable/pan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Buttonpanah"
        android:layout_centerHorizontal="true"
        android:text="START"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"/>



</RelativeLayout>